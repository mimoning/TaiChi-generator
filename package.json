{
  "name": "taichi-generator",
  "version": "0.0.6",
  "description": "Standard tooling for JS development",
  "main": "src/index.ts",
  "files": [
    "bin"
  ],
  "bin": {
    "taichi": "./bin/index.js"
  },
  "scripts": {
    "lint": "prettier --write --parser typescript \"src/**/*.ts?(x)\"",
    "build": "tsc --build",
    "try": "ts-node ./src/index.ts",
    "try:build": "npm run build && node ./bin/index.js",
    "release": "standard-version",
    "pub": "npm login && npm run build && npm publish",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "author": "Mimo",
  "license": "MIT",
  "devDependencies": {
    "@types/html-webpack-plugin": "^3.2.1",
    "@types/node": "^20.12.5",
    "@types/webpack": "^5.28.5",
    "@types/webpack-bundle-analyzer": "^4.7.0",
    "@types/webpack-manifest-plugin": "^3.0.8",
    "commander": "^12.0.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  },
  "dependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.24.4",
    "babel-loader": "^9.1.3",
    "core-js": "2",
    "css-loader": "^7.0.0",
    "css-minimizer-webpack-plugin": "^6.0.0",
    "get-port": "^7.1.0",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.8.1",
    "postcss": "^8.4.38",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^9.5.4",
    "sass": "^1.74.1",
    "sass-loader": "^14.1.1",
    "style-loader": "^3.3.4",
    "terser-webpack-plugin": "^5.3.10",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.91.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-dev-server": "^5.0.4",
    "webpack-manifest-plugin": "^5.0.0",
    "webpack-merge": "^5.10.0"
  },
  "browserslist": {
    "targets": "> 0.25%, not dead"
  }
}
