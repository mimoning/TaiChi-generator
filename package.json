{
  "name": "taichi-generator",
  "version": "0.0.7",
  "description": "Standard tooling for JS development",
  "main": "src/index.ts",
  "files": [
    "bin"
  ],
  "bin": {
    "taichi": "./bin/index.js"
  },
  "scripts": {
    "lint": "prettier --write --parser typescript \"src/**/*.ts?(x)\"",
    "build": "tsc --build",
    "try": "ts-node ./src/index.ts",
    "try:build": "npm run build && node ./bin/index.js",
    "release": "standard-version",
    "pub": "npm login && npm run build && npm publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "author": "Mimo",
  "license": "MIT",
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/html-webpack-plugin": "^3.2.1",
    "@types/mini-css-extract-plugin": "^0.9.0",
    "@types/node": "^13.1.6",
    "@types/optimize-css-assets-webpack-plugin": "^5.0.1",
    "@types/terser-webpack-plugin": "^2.2.0",
    "@types/webpack": "^4.41.2",
    "@types/webpack-bundle-analyzer": "^2.13.3",
    "@types/webpack-dev-server": "^3.9.0",
    "@types/webpack-manifest-plugin": "^2.1.0",
    "@types/webpack-merge": "^4.1.5",
    "commander": "^4.1.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^4.0.7",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "standard-version": "^7.0.1",
    "ts-node": "^8.6.1",
    "tsconfig-paths": "^3.9.0"
  },
  "dependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.11.0",
    "babel-loader": "^8.1.0",
    "core-js": "2",
    "css-loader": "^3.4.2",
    "get-port": "^5.1.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "terser-webpack-plugin": "^2.3.2",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "url-loader": "^3.0.0",
    "webpack": "^4.41.5",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-dev-server": "^3.10.1",
    "webpack-manifest-plugin": "^2.2.0",
    "webpack-merge": "^4.2.2"
  },
  "browserslist": {
    "targets": "> 0.25%, not dead"
  }
}
