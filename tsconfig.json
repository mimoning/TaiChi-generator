{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./bin/src",
    "target": "ES5",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ]
}
